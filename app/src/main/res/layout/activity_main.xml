<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.kogitune.researchmvvm.ColorViewModel"/>
        <import type="android.graphics.Color"/>
    </data>

    <LinearLayout
        android:id="@+id/color_pallet"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:backgroundColor="@{Color.rgb(viewModel.r, viewModel.g, viewModel.b)}"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:text='@{"Red:" + viewModel.r}'/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"
            app:onSeekBarChangeListener="@{viewModel.onRedSeekBarChangeListener}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:text='@{"Red:" + viewModel.g}'/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"
            app:onSeekBarChangeListener="@{viewModel.onGreenSeekBarChangeListener}"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:text='@{"Red:" + viewModel.b}'/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"
            app:onSeekBarChangeListener="@{viewModel.onBlueSeekBarChangeListener}"/>

    </LinearLayout>
</layout>
